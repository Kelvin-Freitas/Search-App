<div class="container">
    <div class="card">
        <div class="span3 well">
            <div class="card-header perfil">
            <center>
            {{#if myprofile}}
                <button type="button" class="rounded-circle" data-toggle="modal" data-target="#exampleModal">
                    <img src="{{user.avatar}}" name="avatar" width="140" height="140" class="rounded-circle">
                </button>
                <!-- Modal -->
                <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Trocar Foto</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <form action="/user/changePhoto" method="POST" enctype="multipart/form-data">
                        <div class="modal-body">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
                                </div>
                                <div class="custom-file">
                                    <input type="file" name="avatar" class="custom-file-input" id="avatar"
                                    aria-describedby="inputGroupFileAddon01">
                                    <label class="custom-file-label" for="avatar">Escolher Arquivo</label>
                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal">Cancelar</button>
                            <button type="submit" class="btn btn-success">Salvar</button>
                        </div>
                    </form>
                    </div>
                </div>
                </div>
            {{else}}
                <img src="{{user.avatar}}" name="aboutme" width="140" height="140" class="rounded-circle">
            {{/if}}
            <h3 class="media-heading">{{user.name}}, <small>{{user.estado}}</small></h3>
            <span>{{user.email}}</span>
            </center>
            </div>
        </div>
        <div class="d-flex justify-content-center mt-4">
            <center>
                <p class="text-center">
                    {{user.bio}}
                </p>
                <hr>
                <br>
                <a href="{{user.url}}" target="_blank"><button type="button" class="btn btn-primary btn-circle btn-lg"><svg width="2em" height="2em" viewBox="0 0 18 18" class="bi bi-link" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path d="M6.354 5.5H4a3 3 0 0 0 0 6h3a3 3 0 0 0 2.83-4H9c-.086 0-.17.01-.25.031A2 2 0 0 1 7 10.5H4a2 2 0 1 1 0-4h1.535c.218-.376.495-.714.82-1z"/>
                <path d="M9 5.5a3 3 0 0 0-2.83 4h1.098A2 2 0 0 1 9 6.5h3a2 2 0 1 1 0 4h-1.535a4.02 4.02 0 0 1-.82 1H12a3 3 0 1 0 0-6H9z"/>
                </svg></button></a>
                <hr>
            </center>
        </div>
    </div>
</div>