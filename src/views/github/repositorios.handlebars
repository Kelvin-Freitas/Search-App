<h2>Repositórios</h2>
<div class="card">
    <div class="card-body">
        <form action="/github/repositorios" method="GET">
            <div class="form-group">
                <input type="text" class="form-control" id="repository" name="repository" placeholder="Digite aqui o nome do repositório que procura" required>
            </div>
            <div class="d-flex justify-content-center mt-2">
                <button class="btn btn-success" type="submit">Procurar</button>
            </div>
        </form>
    </div>
</div>
<div class="row row-cols-1 row-cols-md-3 mt-4">
    {{#each lista}}
        <div class="col mb-4">
            <div class="card">
                <img src="{{avatar_url}}" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">{{full_name}}</h5>
                    <p class="card-text"><small class="text-muted">{{language}}</small></p>
                    <p class="card-text">Usuário: {{login}}</p>
                    <p class="card-text">Descrição: {{description}}</p>
                    <button class="btn btn-success mr-3">Acessar</button><button class="btn btn-primary">Comentários</button>
                </div>
            </div>
        </div>
    {{else}}

    {{/each}}
</div>